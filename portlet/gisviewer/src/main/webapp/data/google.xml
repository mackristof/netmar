<?xml version="1.0" encoding="UTF-8"?>
<OWSContext version="0.3.0" id="ows-context-ex-1-v3" xmlns="http://www.opengis.net/ows-context"
    xmlns:gml="http://www.opengis.net/gml"
    xmlns:kml="http://www.opengis.net/kml/2.2"
    xmlns:ogc="http://www.opengis.net/ogc"
    xmlns:ows="http://www.opengis.net/ows"
    xmlns:sld="http://www.opengis.net/sld"
    xmlns:xlink="http://www.w3.org/1999/xlink"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.opengis.net/ows-context http://www.ogcnetwork.net/schemas/owc/0.3.0/owsContext.xsd">
    <General>
        <Window width="512" height="512"/>
        <!--devrait etre EPSG:3857 mais coriolis ne marche pas avec cette projection, tant que ce n'est pas corrigé on utilise le mercator basique-->
        <ows:BoundingBox crs="EPSG:3395">
            <ows:LowerCorner>-20037507.067161847 -20037507.067161847</ows:LowerCorner>
            <ows:UpperCorner>20037507.067161847 20037507.067161847</ows:UpperCorner>
        </ows:BoundingBox>
        <ows:Title>BlueMarble + Google (EPSG:3857) example </ows:Title>
    </General>
    <ResourceList>
       <Layer name="BlueMarble" queryable="1" hidden="0" group="Raster" opacity="1">
            <ows:Title>Blue Marble</ows:Title>
            <ows:OutputFormat>image/png</ows:OutputFormat>
            <Server service="urn:ogc:serviceType:WMS" version="1.1.1">
                <OnlineResource xlink:type="simple" xlink:href="http://test.geomatys.com/cstl-trunk/WS/wms/default"/>
            </Server>
        </Layer>
        <Layer name="AO_Coriolis_(Temp)" queryable="1" hidden="1" group="Raster/Coriolis">
            <ows:Title>Température</ows:Title>
            <ows:OutputFormat>image/png</ows:OutputFormat>
            <Server service="urn:ogc:serviceType:WMS" version="1.1.1">
                <OnlineResource xlink:type="simple" xlink:href="http://test.geomatys.com/cstl-trunk/WS/wms/default"/>
            </Server>
        </Layer>
    </ResourceList>
</OWSContext>